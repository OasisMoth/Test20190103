<Window x:Class="FileAssortment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FileAssortment"
        mc:Ignorable="d"
        Title="FileAssortment"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowDataContext />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid >
            <StackPanel  Orientation="Horizontal" >
                <TextBox Width="450"
                         Margin="10"
                         HorizontalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Text="{Binding Path=TargetDirectory}">
                </TextBox>
                <StackPanel Orientation="Vertical">
                    <Button Content="ディレクトリ指定"
                            Margin="5"
                            Command="{Binding Path=TargetCommand}"></Button>
                    <Button Content="実行"
                            Margin="5"
                            Command="{Binding Path=AssortCommand}"></Button>
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
